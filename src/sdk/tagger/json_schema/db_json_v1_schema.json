{
    "type": "object",
    "properties": {
        "rating": { "$ref": "#/$defs/weighted_label" },
        "tag": { "$ref": "#/$defs/weighted_label" },
        "query": {
            "type": "object",
            "patternProperties": {
                "^[0-9a-f]{64}.*$": {
                    "type": "array",
                    "prefixItems": [
                        {"type": "string" },
                        {"type": "number", "minimum": 0}
                    ],
                    "minContains": 2,
                    "maxContains": 2
                }
            }
        },
        "meta": {
            "type": "object",
            "properties": {
              "index_shift": {
                "type": "integer",
                "minimum": 0,
                "maximum": 16
              }
            }
        },
        "add": { "type": "string" },
        "exclude": { "type": "string" },
        "keep": { "type": "string" },
        "repl": { "type": "string" },
        "search": { "type": "string" }
    },
    "required": ["rating", "tag", "query"],
    "additionalProperties": false,
    "$defs": {
        "weighted_label": {
            "type": "object",
            "patternProperties": {
                "^[^,]+$": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "minimum": 0
                    }
                }
            }
        }
    }
}
